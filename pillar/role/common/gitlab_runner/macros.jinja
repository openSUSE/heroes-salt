{%- macro runner() -%}
        - name: {{ grains['host'] }}
          id: {{ grains['host'][-1] }}
          url: https://gitlab.infra.opensuse.org/
          token_obtained_at: 0001-01-01T00:00:00Z
          token_expires_at: 0001-01-01T00:00:00Z
          executor: docker
          cache:
            MaxUploadedArchiveSize: 0
          docker:
            host: unix:///run/podman/podman.sock
            tls_verify: false
            image: registry.opensuse.org/opensuse/leap:15.5
            privileged: true
            disable_entrypoint_overwrite: false
            oom_kill_disable: false
            disable_cache: false
            volumes:
              - /cache
            shm_size: 0
            helper_image: registry.opensuse.org/home/darix/apps/containers/gitlab-runner-helper:x86_64-latest
            extra_hosts:
              # GitLab CI seems to overwrite the default hosts file with one not matching the openSUSE defaults
              # this line adds an additional hosts entry for "::1" to runner containers in order for forward lookups of "ipv6-localhost" to work - reverse will only return "localhost" due to the
              #   existing "::1" entry mapping to "localhost"
              # there's currently no known way to replace or extend the existing "::1" entry but we currently do not have anything expecting a reverse lookup of "::1" to return "ipv6-localhost",
              #   making it not an issue
              - ipv6-localhost:::1
{%- endmacro -%}
